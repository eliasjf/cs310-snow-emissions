<!DOCTYPE html>
<html>
<head>
  <title>Admin</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<section> <!-- Button -->
    <div class="row">
      <div class="col-md-4">
        <br>
        <br>
        <div id="admin-button-container">
          <%= button_to "Seed DB",  {action: 'seedDB', controller: 'admin'}, :class => "btn btn-primary" %>
        </div>
      </div>
    </div>
</section>

<section> <!-- Table -->
    <div class="row">
      <div class="col-md-4">
        <div id="admin-table-container">
          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th>Name</th>
              <th>User ID</th>
              <th>Admin</th>
            </tr>
            </thead>
            <tbody>
            <% @users.each do |depth| %>
                <tr>
                  <td><%= depth["name"] %></td>
                  <td><%= depth["uid"] %></td>
                  <td><%= depth["is_admin"] %></td>
                </tr>
            <%end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</section>

</body>
</html>